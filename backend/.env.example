# APT Chat Bot Environment Configuration
# Copy this file to .env and update with your values

# ===== APPLICATION SETTINGS =====
FLASK_ENV=development
DEBUG=False

# ===== SERVER CONFIGURATION =====
HOST=0.0.0.0
PORT=8080
WORKERS=1

# ===== FLASK CONFIGURATION =====
# Generate a secure secret key: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-replace-with-generated-value

# ===== AUTHENTICATION =====
AUTH_ENABLED=True
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
MAX_LOGIN_ATTEMPTS=5

# ===== OPENAI CONFIGURATION =====
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_DEFAULT_MODEL=gpt-4o-mini-2024-07-18
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048
OPENAI_TOP_P=1.0
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# ===== CORS CONFIGURATION =====
CORS_ENABLED=True
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_TO_FILE=True
LOG_TO_CONSOLE=True
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# ===== RATE LIMITING =====
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# ===== VALIDATION SETTINGS =====
MAX_MESSAGE_LENGTH=4000
MIN_MESSAGE_LENGTH=1
MAX_CONVERSATION_LENGTH=100

# ===== PERFORMANCE SETTINGS =====
RESPONSE_TIMEOUT=60
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30

# ===== SECURITY SETTINGS =====
SESSION_COOKIE_SECURE=False  # Set to True for HTTPS
SECURITY_HEADERS_ENABLED=True

# ===== FEATURE FLAGS =====
FEATURE_ASSESSMENT=True
FEATURE_SESSION_EXPORT=True
FEATURE_CONVERSATION_HISTORY=True
FEATURE_ANALYTICS=False